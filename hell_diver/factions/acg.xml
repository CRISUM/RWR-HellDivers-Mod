		<attribute_config class="xp">
			<attribute weight="1.0" min="0.0" max="0.05" />
		</attribute_config>
	</soldier>  
    
    
	<!-- icecream group -->
	<soldier name="icecream" spawn_score="0.0">
		<resources file="icecream.resources" />

